/* General stuff */

$small_mobile_height = 480px
$small_screen = 640px
$anim_delay = 0.3s

/* Animation */

transition(duration, delay)
  -webkit-transition all duration delay ease-out
  -moz-transition all duration delay ease-out
  -o-transition all duration delay ease-out
  transition all duration delay ease-out

.fade-from-top
  opacity 0
  transform translateY(-14px)
  -webkit-transform translateY(-14px)

.fade-from-bot
  opacity 0
  transform translateY(14px)
  -webkit-transform translateY(14px)

/* Basic elements */

html, body
  margin 0
  padding 0
  font-family UbuntuRegular
  color #fff

h1
  text-align center
  font-size 36px
  @media screen and (max-height: $small_mobile_height)
    font-size 30px

h2
  font-family UbuntuLight
  text-align center
  font-size 30px
  &.no-margin
    margin 0
    padding 40px
  
h3
  font-size 22px

a, a:link, a:visited, a:hover, a:active
  color #90cfd5
  text-decoration none
  
p
  font-family UbuntuLight
  font-size 18px

/* Sections */

section
  margin 0
  padding 0

/* Intro Section */

section#intro
  padding-top 80px
  background-color #19a0a0
  @media screen and (max-width: $small_screen)
    padding-top 44px
  @media screen and (max-height: $small_mobile_height)
    padding-top 20px

h3.center
  text-align center
  margin 8px

img.profile-pic
  transition 0.6s $anim_delay
  display block
  width 260px
  height 260px
  border-radius 50%
  margin 0 auto 0 auto
  @media screen and (max-width: $small_screen)
    width 200px
    height 200px
  @media screen and (max-width: $small_mobile_height)
    width 160px
    height 160px

h1#name
  transition 0.6s $anim_delay + 0.3s

h3#first-thing
  transition 0.6s $anim_delay + 0.5s

h3#second-thing
  transition 0.6s $anim_delay + 0.7s

h3#third-thing
  transition 0.6s $anim_delay + 0.9s

div.links-container
  transition 0.6s $anim_delay + 1.1s
  display block
  height 80px
  width 300px
  margin 40px auto 0 auto
  padding-bottom 40px
  @media screen and (max-width: $small_screen)
    width 280px
  @media screen and (max-width: $small_mobile_height)
    padding-bottom 44px

div.link-placeholder
  float left
  width 80px
  height 80px
  margin-right 30px
  border-radius 50%
  background-color #90cfd5
  @media screen and (max-width: $small_screen)
    margin-right 20px

  &.last
    margin-right 0px

/* Project Section */

section#projects
  color #fff
  background-color #068080
  padding 0 80px 20px 80px
  @media screen and (max-width: $small_screen)
    padding-left 20px
    padding-right 20px

div.project-container
  max-width 800px
  min-height 180px
  margin 40px auto 60px auto

div.project-description-container
  @media screen and (max-width: $small_screen)
    text-align center
  &.left
    padding-left 200px
    @media screen and (max-width: $small_screen)
      padding-left 0
  &.right
    padding-right 200px
    @media screen and (max-width: $small_screen)
      padding-right 0

img.project-image
  width 150px
  height 150px
  border-radius 12px
  
  @media screen and (max-width: $small_screen)
    display block
    margin-left auto
    margin-right auto

  &.left
    float left
    @media screen and (max-width: $small_screen)
      float none

  &.right
    float right
    @media screen and (max-width: $small_screen)
      float none

/* Experience */

section#experience
  background-color #19a0a0
  padding 0 80px 20px 80px
  @media screen and (max-width: $small_screen)
    padding-left 20px
    padding-right 20px

  li
    margin-top 20px
    font-family UbuntuLight
    font-size 18px

div.experience-container
  margin 40px auto 40px auto
  max-width 800px

/* Footer */
footer
  height 80px
  line-height 80px
  text-align center
  background-color #033030
  
  p
    margin 0

/* Fonts */

@font-face {
  font-family: UbuntuRegular
  src: url('./fonts/Ubuntu-R.ttf')
}

@font-face {
  font-family: UbuntuLight
  src: url('./fonts/Ubuntu-L.ttf')
}
