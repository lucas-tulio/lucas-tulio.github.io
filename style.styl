/* General stuff */

html, body
  margin 0
  padding 0
  font-family UbuntuRegular
  color #fff

h1
  text-align center
  font-size 36px

h2
  font-family UbuntuLight
  text-align center
  font-size 30px
  &.no-margin
    margin 0
    padding 40px
  
h3
  font-size 22px

a, a:link, a:visited, a:hover, a:active
  color #90cfd5
  text-decoration none
  
p
  font-family UbuntuLight

/* Sections */

section
  margin 0
  padding 0

/* Intro Section */

section#intro
  padding-top 80px
  background-color #19a0a0
  border-bottom 1px solid #067d7d

img.profile-pic
  display block
  width 260px
  height 260px
  border-radius 50%
  margin 0 auto 0 auto

div.links-container
  display block
  height 100px
  width 300px
  margin 40px auto 0 auto
  padding-bottom 20px
  
div.link-placeholder
  float left
  width 80px
  height 80px
  margin-right 30px
  border-radius 50%
  background-color #90cfd5

  &.last
    margin-right 0px

/* Project Section */

section#projects
  color #fff
  background-color #068080
  padding 0 80px 20px 80px
  border-bottom 1px solid #034c4c

div.project-container
  max-width 1024px
  min-height 180px
  margin 40px auto 60px auto

div.project-description-container
  &.left
    padding-left 200px
  &.right
    padding-right 200px

img.project-image
  width 150px
  height 150px
  border-radius 12px

  &.left
    float left

  &.right
    float right

/* Footer */
footer
  text-align center
  background-color #035050
  
  p
    margin 0
    padding 20px

/* Fonts */

@font-face {
  font-family: UbuntuRegular
  src: url('./fonts/Ubuntu-R.ttf')
}

@font-face {
  font-family: UbuntuLight
  src: url('./fonts/Ubuntu-L.ttf')
}